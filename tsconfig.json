{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/postgres": ["libs/postgres/src"],
      "@app/postgres/*": ["libs/postgres/src/*"]
    },
    "esModuleInterop": true,
    "lib": ["es2020"]
  },
  "exclude": ["node_modules", "dist"]
}
